[Unit]
Description=CtrlChecks Workflow Worker
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/opt/worker
EnvironmentFile=/opt/worker/.env
ExecStart=/opt/worker/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8001
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
